<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" id="http://www.akademy.co.uk/software/BBCNewsTicker/" defaultlocale="en" viewmodes="minimized" version="1.4.34">
	<name short="BBC News Ticker">BBC News Speeddial Ticker</name>
	<description xml:lang="en">A BBC News ticker for Speeddial. It shows and links to the BBC news of your choice, constantly updating from the RSS feed.</description>
	<author href="http://www.akademy.co.uk/me">Matthew Wilcoxson</author>
    
    <feature name="opera:speeddial" required="true">
        <param name="url" value="http://www.bbc.co.uk/news/world/"/>
    </feature> 
    
   <access origin="*" subdomains="true"/>
    
   <icon src="images/icon.png"/>
    
	<preference name="rssFeed" value="http://feeds.bbci.co.uk/news/world/rss.xml" />
	<preference name="urlLink" value="http://www.bbc.co.uk/news/world/" />
	<preference name="title" value="World" />
	
	<preference name="changeSpeed" value="2" />
	<preference name="animationType" value="1" />
	<preference name="itemsType" value="1" />
</widget>
